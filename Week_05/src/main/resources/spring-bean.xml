<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:aop="http://www.springframework.org/schema/aop"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
                        http://www.springframework.org/schema/beans/spring-beans-3.2.xsd
                        http://www.springframework.org/schema/context
                        http://www.springframework.org/schema/context/spring-context-3.2.xsd http://www.springframework.org/schema/aop https://www.springframework.org/schema/aop/spring-aop.xsd">


<bean class="com.linyuan.springbean.bean.Student" id="student1" init-method="createStudent">
        <constructor-arg index="0" value="9547"/>
        <constructor-arg index="1" value="张三"/>
        <constructor-arg index="2" value="21"/>
    </bean>

    <bean class="com.linyuan.springbean.bean.Student" id="student2">

    </bean>

    <bean class="com.linyuan.springbean.bean.Student" id="student3" init-method="createStudent">
    </bean>

    <bean id="aop1" class="com.linyuan.springaop.aop.Aop1"></bean>

    <bean id="aop2" class="com.linyuan.springaop.aop.Aop2"></bean>

    <bean id="student-bean" class="com.linyuan.springbean.cofig.StudentBean"></bean>

    <!-- spring 自动创建代理织入切面 -->
    <aop:aspectj-autoproxy />

    <!-- aop相关配置 -->
    <aop:config>
        <!-- aop切点 -->
        <aop:pointcut id="point" expression="execution(* com.linyuan.springaop.aopdemo.*.*(..))"/>
        <!-- aop切面 ref声明切面是哪一个bean -->
        <aop:aspect ref="aop1">
            <!-- 配置前置通知对应的方法 -->
            <aop:before method="beforeTransaction" pointcut-ref="point"></aop:before>
            <!-- 配置后置通知对应的方法 -->
            <aop:after-returning method="afterTransaction" pointcut-ref="point"></aop:after-returning>
            <!-- 配置环绕通知对应的方法 -->
            <aop:around method="around" pointcut-ref="point"></aop:around>
        </aop:aspect>
    </aop:config>

    <bean id="aopDemo" class="com.linyuan.springaop.bean.AopDemo"></bean>

    <!-- 开启注解扫描 -->
    <context:component-scan base-package="com.linyuan.springbean" />
</beans>